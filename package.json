{
	"name":           "polyclay",
	"version":        "1.3.0",
	"description":    "a schema-enforcing model class for node with optional key-value store persistence",
	"author":         "C J Silverio <ceejceej@gmail.com>",
	"license":        "MIT",
	"readmeFilename": "README.md",
	"main":           "index.js",
	"directories":
	{
		"example": "examples",
		"test":    "test"
	},
	"scripts":
	{
		"test":       "mocha -R spec -t 5000 test/test-*.js && mocha -t 5000 --require blanket -R travis-cov test/test-*.js",
		"test-cov":   "mocha --require blanket -R travis-cov test/test-*.js",
		"coverage":   "mocha --require blanket -R html-cov test/test-*.js > test/coverage.html",
		"travis-cov": { "threshold": 90 },
		"blanket":
		{
			"pattern": "//^((?!\/node_modules|test|examples\/).)*$/ig"
		}
	},
	"repository":
	{
		"type": "git",
		"url":  "git://github.com/ceejbot/polyclay.git"
	},
	"dependencies":
	{
		"async":     "*",
		"lodash":    "*",
		"lucidjs":   "*",
		"p-promise": "*"
	},
	"optionalDependencies":
	{
		"cradle":      "git://github.com/ceejbot/cradle.git",
		"scamandrios": "git://github.com/ceejbot/scamandrios.git",
		"levelup":     "*",
		"leveldown":   "*",
		"hiredis":     "*",
		"redis":       "*"
	},
	"devDependencies":
	{
		"mocha":      "*",
		"chai":       "*",
		"blanket":    "*",
		"travis-cov": "*"
	},
	"keywords":
	[
		"odm",
		"model",
		"mapper",
		"schema",
		"couchdb",
		"couch",
		"redis",
		"levelup",
		"cassandra"
	]
}
